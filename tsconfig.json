{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "types": [
      "svelte"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    ".astro/types.d.ts",
    "**/*",
    "src/**/*.astro",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "dist"
  ]
}