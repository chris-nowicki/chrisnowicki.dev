<button
  id="theme-toggle"
  type="button"
  class="relative cursor-pointer rounded-lg border border-border p-2 text-muted-foreground transition-colors hover:bg-accent hover:text-foreground"
  aria-label="Toggle theme">
  <!-- Moon icon (visible in light mode, hidden in dark) -->
  <svg
    class="h-5 w-5 scale-100 rotate-0 transition-all dark:scale-0 dark:-rotate-90"
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    aria-hidden="true">
    <path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z" />
  </svg>
  <!-- Sun icon (hidden in light mode, visible in dark) -->
  <svg
    class="absolute top-2 left-2 h-5 w-5 scale-0 rotate-90 transition-all dark:scale-100 dark:rotate-0"
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    aria-hidden="true">
    <circle cx="12" cy="12" r="4" />
    <path d="M12 2v2" />
    <path d="M12 20v2" />
    <path d="m4.93 4.93 1.41 1.41" />
    <path d="m17.66 17.66 1.41 1.41" />
    <path d="M2 12h2" />
    <path d="M20 12h2" />
    <path d="m6.34 17.66-1.41 1.41" />
    <path d="m19.07 4.93-1.41 1.41" />
  </svg>
  <span class="sr-only">Toggle theme</span>
</button>

<script>
  function initThemeToggle() {
    const btn = document.getElementById('theme-toggle')
    if (!btn) return

    btn.addEventListener('click', () => {
      document.documentElement.classList.toggle('dark')
    })
  }

  initThemeToggle()
  document.addEventListener('astro:after-swap', initThemeToggle)
</script>
