---
import { Image } from 'astro:assets'
import FramePlus from '@/components/FramePlus.astro'
import ViewCounter from '@/components/React/ViewCounter'

interface Props {
  title: string
  date: string
  readTime: string
  slug: string
  image?: ImageMetadata
}

const { title, date, readTime, slug, image } = Astro.props
---

{
  image ? (
    <header class="group relative mt-10 mb-14">
      <div class="relative -mx-6 my-6 overflow-hidden lg:mx-0">
        <div class="relative aspect-video sm:aspect-[2.5/1]">
          <Image
            src={image}
            alt={title}
            width={1200}
            height={480}
            class="absolute inset-0 h-full w-full object-cover grayscale transition-all duration-500 group-hover:grayscale-0"
          />
          <div class="absolute inset-0 bg-linear-to-t from-black/90 via-black/50 to-black/30" />
        </div>

        <div class="absolute inset-0 flex flex-col justify-end p-5 sm:p-8 md:p-10">
          <div class="mb-3 sm:mb-4">
            <span class="inline-flex items-center gap-2 rounded-full border border-dashed border-white/40 bg-black/30 px-4 py-1.5 font-mono text-xs uppercase tracking-widest text-white backdrop-blur-sm sm:gap-3 sm:text-sm">
              <span>{date}</span>
              <span class="h-3 w-px bg-white/40" />
              <span>{readTime}</span>
              <span class="h-3 w-px bg-white/40" />
              <ViewCounter client:only="react" slug={slug} light={true} />
            </span>
          </div>

          <h1 class="max-w-4xl text-2xl font-bold leading-tight tracking-tight text-white sm:text-4xl md:text-5xl lg:text-6xl">
            {title}
          </h1>
        </div>
      </div>

      <div class="relative z-20 mt-0">
        <div class="absolute left-1/2 w-screen -translate-x-1/2 border-t border-dashed border-slate-200" />
        <FramePlus position="left" />
        <FramePlus position="right" />
      </div>
    </header>
  ) : (
    <header class="relative mt-10 mb-14">
      <div class="my-6 py-8 sm:py-12">
        <div class="mb-4 flex justify-center sm:mb-6">
          <span class="inline-flex items-center gap-2 rounded-full border border-dashed border-slate-300 px-4 py-1.5 font-mono text-xs uppercase tracking-widest text-slate-500 sm:gap-3 sm:text-sm">
            <span>{date}</span>
            <span class="h-3 w-px bg-slate-300" />
            <span>{readTime}</span>
            <span class="h-3 w-px bg-slate-300" />
            <ViewCounter client:only="react" slug={slug} />
          </span>
        </div>

        <h1 class="mx-auto max-w-3xl text-center text-2xl font-bold leading-tight tracking-tight text-slate-900 sm:text-3xl md:text-4xl lg:text-5xl">
          {title}
        </h1>
      </div>

      <div class="relative z-20">
        <div class="absolute left-1/2 w-screen -translate-x-1/2 border-t border-dashed border-slate-200" />
        <FramePlus position="left" />
        <FramePlus position="right" />
      </div>
    </header>
  )
}
