---
import Container from './Container.astro'
import Link from './Link.astro'
import SquiggleLine from '@/assets/icons/needle-underline.svg'
import { socialLinks } from '@/lib/site'

const socialIconClass =
  'hover:scale-110 transition-all duration-200 ease-in-out hover:text-foreground'
---

<section
  class="flex h-full flex-col justify-between rounded-xl border bg-muted p-4 text-base sm:p-5 md:p-6 gap-6"
  id="contact">
  <div class="flex flex-col gap-3 sm:gap-4">
    <header class="relative">
      <SquiggleLine class="absolute -bottom-2 left-1 w-28 sm:-bottom-3 sm:w-32" />
      <h2 class="text-base font-bold sm:text-lg md:text-xl">Let's Connect</h2>
    </header>
  </div>

  <div class="flex flex-col gap-4">
    <p>
      If you want to get in touch with me about something or just to say hi ðŸ‘‹,
      reach out on social media or send me an email at{' '}
      <a
        href="mailto:hello@chrisnowicki.dev"
        class="link-underline font-bold hover:text-foreground">
        hello@chrisnowicki.dev</a>.
    </p>

    <div class="flex flex-wrap gap-4">
      {
        socialLinks.map(({ icon: Icon, url, label }) => (
          <Link
            href={url}
            class={socialIconClass}
            target="_blank"
            ariaLabel={label}>
            <Icon width={24} aria-hidden="true" />
          </Link>
        ))
      }
    </div>
  </div>
</section>
