---
interface Props {
  label?: string
  class?: string
}

const { label = '', class: className = '' } = Astro.props
---

<div class:list={['relative z-20 my-8 md:my-12', className]} aria-hidden="true">
  <div class="absolute left-1/2 w-screen -translate-x-1/2 border-t border-dashed border-slate-200"></div>

  {label && (
    <div class="flex justify-center py-2">
      <span class="font-mono text-xs font-medium uppercase tracking-widest text-slate-500">
        {label}
      </span>
    </div>
  )}

  <div class="absolute left-1/2 w-screen -translate-x-1/2 border-t border-dashed border-slate-200"></div>
</div>
