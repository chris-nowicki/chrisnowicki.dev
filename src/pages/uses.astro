---
import DeskSetup from '@/assets/images/desk-setup.webp'
import Container from '@/components/Container.astro'
import PageLayout from '@/layouts/PageLayout.astro'
import { USES } from '@/lib/site'
import generateOgImageUrl from '@/utils/og-image'
import { Picture } from 'astro:assets'
import { softwareData, hardwareData, coffeeData, gitHubData } from '@/data/uses'
import BlueprintSeparator from '@/components/BlueprintSeparator.astro'
import GitHubIcon from '@/assets/icons/github.svg'
import { cn } from '@/utils/utils'

export const prerender = true

const ogImageUrl = generateOgImageUrl({
  header: `/${USES.TITLE.toUpperCase()}`,
  description: USES.DESCRIPTION,
})
---

<PageLayout
  title={USES.TITLE}
  description={USES.DESCRIPTION}
  image={ogImageUrl}>
  <Container>
    <section class="text-md relative pt-12 sm:pt-16 md:pt-20 sm:text-base">
      <header
        class="mb-8 flex w-full flex-col items-center justify-center text-center md:mb-16">
        <div class="w-full sm:w-4/5 md:w-3/5">
          <h1 class="text-2xl font-semibold sm:text-3xl md:text-4xl">
            The Gear That Keeps Me Caffeinated & Coding
          </h1>
        </div>
      </header>

      <Picture
        src={DeskSetup}
        width={768}
        height={700 * 0.75}
        class="mb-8 aspect-video w-full grayscale transition-all duration-500 ease-in-out hover:grayscale-0"
        alt="Desk Setup"
      />

      <div>
        <BlueprintSeparator label="GitHub" />
      </div>

      <div class="mb-10 grid grid-cols-1 gap-2 font-mono md:grid-cols-2">
        {
          gitHubData.map((gitHub) => (
            <a
              href={gitHub.link}
              target="_blank"
              rel="noopener noreferrer"
              class={cn(
                'group relative flex items-start gap-4 border p-4',
                'transition-all duration-200',
                'before:absolute before:left-0 before:top-0 before:h-full before:w-1',
                'before:bg-foreground before:opacity-0 before:transition-opacity before:duration-200',
                'hover:before:opacity-100 hover:border-border'
              )}>
              <div class="flex min-w-0 flex-1 flex-col gap-1">
                <h2 class="font-mono text-md group-hover:font-semibold">{gitHub.title}</h2>
                <p class="text-sm leading-relaxed text-muted-foreground">
                  {gitHub.description}
                </p>
              </div>
              <GitHubIcon
                width={24}
                height={24}
                class="mt-0.5 shrink-0 text-muted-foreground transition-colors duration-200 group-hover:text-foreground"
              />
            </a>
          ))
        }
      </div>

      <div>
        <BlueprintSeparator label="Coffee" />
      </div>

      <div class="grid grid-cols-1 gap-2 font-mono md:grid-cols-3">
        {
          coffeeData.map((coffee, index) => (
            <a
              class={cn(
                'group relative flex flex-col items-center gap-2 rounded-xl border p-2',
                'transition-all duration-200',
                'before:absolute before:left-0 before:top-0 before:h-full before:w-1 before:rounded-l-xl',
                'before:bg-foreground before:opacity-0 before:transition-opacity before:duration-200',
                'hover:before:opacity-100 hover:border-border',
                index === 0 && 'md:col-span-3'
              )}
              href={coffee.link}
              target="_blank"
              rel="noopener noreferrer">
              <h2 class="font-mono text-md group-hover:font-semibold">{coffee.title}</h2>
              <img
                src={coffee.imageSrc}
                alt={coffee.title}
                width={500}
                height={500}
                class={cn(
                  'mb-2 object-cover grayscale transition-all duration-500',
                  'group-hover:grayscale-0',
                  index === 0 ? 'h-48 w-40 md:h-72 md:w-64' : 'h-36 w-32 md:h-64 md:w-56'
                )}
              />
            </a>
          ))
        }
      </div>

      <div>
        <BlueprintSeparator label="Software" />
      </div>

      <div class="grid grid-cols-2 gap-5 font-mono sm:grid-cols-6 sm:gap-x-10">
        {
          softwareData.map((software) => (
            <a
              class="group flex flex-col items-center justify-center gap-2"
              href={software.link}
              target="_blank"
              rel="noopener noreferrer">
              <h2 class="text-md group-hover:font-semibold">{software.title}</h2>
              <div
                class={cn(
                  'relative flex aspect-square w-full items-center justify-center rounded-lg border',
                  'transition-all duration-200',
                  'before:absolute before:left-0 before:top-0 before:h-full before:w-1 before:rounded-l-lg',
                  'before:bg-foreground before:opacity-0 before:transition-opacity before:duration-200',
                  'group-hover:before:opacity-100 group-hover:border-border'
                )}>
                <img
                  src={software.imageSrc}
                  alt={software.title}
                  width={63}
                  height={63}
                  class="object-cover grayscale transition-all duration-500 group-hover:grayscale-0"
                />
              </div>
            </a>
          ))
        }
      </div>

      <div>
        <BlueprintSeparator label="Hardware" />
      </div>

      <div class="grid grid-cols-1 gap-5 font-mono sm:grid-cols-2 sm:gap-x-4">
        {
          hardwareData.map((hardware) => (
            <a
              class={cn(
                'group relative flex flex-col justify-center gap-2 rounded-xl border p-2',
                'transition-all duration-200',
                'before:absolute before:left-0 before:top-0 before:h-full before:w-1 before:rounded-l-xl',
                'before:bg-foreground before:opacity-0 before:transition-opacity before:duration-200',
                'hover:before:opacity-100 hover:border-border'
              )}
              href={hardware.link}
              target="_blank"
              rel="noopener noreferrer">
              <h2 class="text-md group-hover:font-semibold">{hardware.title}</h2>
              <p class="text-sm text-muted-foreground">{hardware.description}</p>
            </a>
          ))
        }
      </div>
    </section>
  </Container>
</PageLayout>

