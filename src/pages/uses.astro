---
import DeskSetup from '@/assets/images/desk-setup.webp'
import Container from '@/components/Container.astro'
import PageLayout from '@/layouts/PageLayout.astro'
import { USES } from '@/lib/site'
import generateOgImageUrl from '@/utils/og-image'
import { Picture } from 'astro:assets'
import { softwareData, hardwareData, coffeeData, gitHubData } from '@/data/uses'
import BlueprintSeparator from '@/components/BlueprintSeparator.astro'
import GitHubIcon from '@/assets/icons/github.svg'
import { cn } from '@/utils/utils'

export const prerender = true

const ogImageUrl = generateOgImageUrl({
  header: `/${USES.TITLE.toUpperCase()}`,
  description: USES.DESCRIPTION,
})
---

<PageLayout
  title={USES.TITLE}
  description={USES.DESCRIPTION}
  image={ogImageUrl}>
  <Container>
    <section class="text-md relative pt-12 sm:pt-16 md:pt-20 sm:text-base">
      <header
        class="mb-8 flex w-full flex-col items-center justify-center text-center md:mb-16">
        <div class="w-full sm:w-4/5 md:w-3/5">
          <h1 class="text-2xl font-semibold sm:text-3xl md:text-4xl">
            The Gear That Keeps Me Caffeinated & Coding
          </h1>
        </div>
      </header>

      <Picture
        src={DeskSetup}
        width={768}
        height={700 * 0.75}
        class="mb-5 aspect-video w-full rounded-lg grayscale transition-all duration-300 ease-in-out hover:grayscale-0"
        alt="Desk Setup"
      />

      <div>
        <BlueprintSeparator label="GitHub" />
      </div>

      <div class="mb-10 grid grid-cols-1 gap-2 font-mono md:grid-cols-2">
        {
          gitHubData.map((gitHub) => (
            <a
              href={gitHub.link}
              target="_blank"
              rel="noopener noreferrer"
              class="group flex items-start gap-4 rounded-xl border p-4 transition-all duration-200 hover:-translate-y-1 hover:border-slate-300">
              <GitHubIcon
                width={32}
                height={32}
                class="mt-0.5 shrink-0"
              />
              <div class="flex min-w-0 flex-1 flex-col gap-1">
                <h2 class="semi-bold font-mono text-md group-hover:font-semibold">{gitHub.title}</h2>
                <p class="text-sm leading-relaxed text-muted-foreground">
                  {gitHub.description}
                </p>
              </div>
            </a>
          ))
        }
      </div>

      <div>
        <BlueprintSeparator label="Coffee" />
      </div>

      <div class="grid grid-cols-1 gap-2 font-mono md:grid-cols-3">
        {
          coffeeData.map((coffee, index) => (
            <a
              class={cn(
                'group flex flex-col items-center gap-2 rounded-xl border p-2 transition-all duration-200 hover:-translate-y-1 hover:border-slate-300 hover:font-semibold',
                index === 0 && 'md:col-span-3'
              )}
              href={coffee.link}
              target="_blank"
              rel="noopener noreferrer">
              <h2 class="semi-bold font-mono text-md">{coffee.title}</h2>
              <img
                src={coffee.imageSrc}
                alt={coffee.title}
                width={500}
                height={500}
                class="mb-2 h-36 w-32 object-cover grayscale group-hover:grayscale-0 md:h-64 md:w-56"
              />
            </a>
          ))
        }
      </div>

      <div>
        <BlueprintSeparator label="Software" />
      </div>

      <div class="grid grid-cols-2 gap-5 font-mono sm:grid-cols-6 sm:gap-x-10">
        {
          softwareData.map((software) => (
            <a
              class="group flex flex-col items-center justify-center gap-2 transition-transform duration-200 hover:-translate-y-1"
              href={software.link}
              target="_blank"
              rel="noopener noreferrer">
              <h2 class="text-md group-hover:font-semibold">{software.title}</h2>
              <div class="flex aspect-square w-full items-center justify-center rounded-lg border transition-colors duration-200 group-hover:border-slate-300">
                <img
                  src={software.imageSrc}
                  alt={software.title}
                  width={63}
                  height={63}
                  class="object-cover grayscale transition-all duration-300 group-hover:grayscale-0"
                />
              </div>
            </a>
          ))
        }
      </div>

      <div>
        <BlueprintSeparator label="Hardware" />
      </div>

      <div class="grid grid-cols-1 gap-5 font-mono sm:grid-cols-2 sm:gap-x-4">
        {
          hardwareData.map((hardware) => (
            <a
              class="group flex flex-col justify-center gap-2 rounded-xl border p-2 transition-all duration-200 hover:-translate-y-1 hover:border-slate-300"
              href={hardware.link}
              target="_blank"
              rel="noopener noreferrer">
              <h2 class="text-md group-hover:font-semibold">{hardware.title}</h2>
              <p class="text-sm text-muted-foreground">{hardware.description}</p>
            </a>
          ))
        }
      </div>
    </section>
  </Container>
</PageLayout>

