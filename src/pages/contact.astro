---
import Container from '@/components/Container.astro'
import PageLayout from '@/layouts/PageLayout.astro'
import { CONTACT } from '@/lib/site'
import generateOgImageUrl from '@/utils/og-image'
import ContactWrapper from '@/components/Contact.astro'

const ogImageUrl = generateOgImageUrl({
  header: `/${CONTACT.TITLE.toUpperCase()}`,
  description: CONTACT.DESCRIPTION,
})
---

<PageLayout
  title={CONTACT.TITLE}
  description={CONTACT.DESCRIPTION}
  image={ogImageUrl}>
  <Container>
    <section class="pt-12 text-sm sm:pt-20 sm:text-base">
      <header class="mb-9">
        <h1 class="text-2xl font-bold sm:text-4xl">{CONTACT.TITLE}</h1>
      </header>
      <ContactWrapper page={true} />
    </section>
  </Container>
</PageLayout>
