---
import Footer from '@/components/Footer.astro'
import Head from '@/components/Head.astro'
import NavBar from '@/components/NavBar.astro'
import { SITE } from '@/lib/site'
import ScrollToTop from '@/components/ScrollToTop.astro'

interface Props {
  title: string
  description: string
  image?: string
}

const { title, description, image } = Astro.props

// Get Convex URL from Worker runtime environment
// @ts-ignore - Cloudflare runtime env access
const convexUrl = (Astro.locals as any).runtime?.env?.PUBLIC_CONVEX_URL as string | undefined
---

<!doctype html>
<html lang="en">
  <head>
    <Head
      title={`${title} | ${SITE.NAME}`}
      description={description}
      image={image}
    />
    <!-- Inject Convex URL for client-side access -->
    {convexUrl && (
      <script define:vars={{ convexUrl }}>
        window.__CONVEX_URL__ = convexUrl
      </script>
    )}
  </head>
  <body>
    <NavBar />
    <main>
      <slot />
    </main>
    <Footer />
    <ScrollToTop />
  </body>
</html>

<script>
  import { initLinkUnderline } from '@/utils/link-underline'

  // Initialize on page load
  initLinkUnderline()

  // Re-initialize after Astro page transitions
  document.addEventListener('astro:after-swap', () => {
    initLinkUnderline()
  })
</script>
